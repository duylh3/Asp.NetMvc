
@{
    ViewBag.Title = "CauHoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/mustache.min.js"></script>
    <script src="~/Scripts/app/QuestionJS.js"></script>
}

<div class="row">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Sequence</th>
                <th>Question</th>
                <th>Category</th>
                <th>CreatedBy</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tbl-content"></tbody>
    </table>
</div>

@Html.Partial("~/Views/Question/_TraLoi.cshtml")

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td class="col-seq">{{Sequence}}</td>
        <td>{{{Question}}}</td>
        <td>{{Category}}</td>
        <td>{{CreatedBy}}</td>
        <td class="text-center" scope="row">
            <button class="btn btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i>Trả lời</button>
        </td>
    </tr>
</script>
