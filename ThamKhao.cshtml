
@{
    ViewBag.Title = "ThamKhao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/app/controller/documentjs.js"></script>
}

<div class="row" style="padding-top: 50px">
    <h4>Danh sách tài liệu tham khảo</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tham khảo</th>
                <th>Chuyên mục</th>
                <th>Người tạo</th>
                <th>Nội dung</th>
            </tr>
        </thead>
        <tbody id="tbl-content"></tbody>
    </table>
</div>

@Html.Partial("~/Views/Document/_NoiDung.cshtml")

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td class="col-seq">{{Sequence}}</td>
        <td>{{{DocumentName}}}</td>
        <td>{{Category}}</td>
        <td>{{CreatedBy}}</td>
        <td class="text-center" scope="row">
            <button class="btn btn-edit" data-id="{{Id}}">Nội dung</button>
        </td>
    </tr>
</script>

